{
    "name": "@utils-npm/build-kit",
    "version": "1.0.0",
    "license": "ISC",
    "main": "index.js",
    "files": [
        "docs",
        "babel",
        "config",
        "scripts"
    ],
    "scripts": {
        "analyze": "npm run build -- --env presets=analyze",
        "lint": "eslint --debug src",
        "lint:check": "eslint src && prettier --check src/",
        "lint:fix": "eslint --debug src --fix && prettier --write  src/",
        "lint:style": "npx stylelint 'src/**/*.less' --fix --config stylelint.config.js",
        "lint:staged": "node_modules/.bin/lint-staged",
        "prettier": "prettier --write src",
        "dev:cross-env": "node_modules/.bin/cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling NODE_ENV=development USE_THREAD=true PORT=3000 node scripts/start.js",
        "build:cross-env": "node_modules/.bin/cross-env NODE_ENV=production node node_modules/@utils-npm/build-kit/scripts/build.js",
        "tsc": "node --max-old-space-size=4096 ../../node_modules/typescript/bin/tsc --noEmit -p ./tsconfig.json",
        "hooks:pre-commit:fix": "npm run tsc && npm run lint:staged",
        "commit": "git-cz",
        "generate": "node_modules/.bin/plop --plopfile config/plop/plop.config.js",
        "test": "jest",
        "test:coverage": "jest --coverage"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@babel/core": "7.12.10",
        "@babel/plugin-proposal-class-properties": "7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "7.12.1",
        "@babel/plugin-syntax-async-generators": "7.8.4",
        "@babel/plugin-syntax-dynamic-import": "7.8.3",
        "@babel/plugin-transform-async-to-generator": "7.12.1",
        "@babel/plugin-transform-modules-commonjs": "7.12.1",
        "@babel/plugin-transform-object-assign": "7.12.13",
        "@babel/plugin-transform-react-jsx": "7.12.10",
        "@babel/plugin-transform-runtime": "7.12.10",
        "@babel/polyfill": "7.12.1",
        "@babel/preset-env": "7.12.10",
        "@babel/preset-typescript": "7.12.7",
        "@hot-loader/react-dom": "17.0.1",
        "@loadable/babel-plugin": "5.13.2",
        "babel-loader": "8.2.2",
        "compression-webpack-plugin": "7.0.0",
        "copy-webpack-plugin": "7.0.0",
        "css-loader": "5.1.3",
        "file-loader": "6.2.0",
        "fork-ts-checker-webpack-plugin": "6.0.5",
        "git-revision-webpack-plugin": "3.0.6",
        "html-loader": "1.3.2",
        "html-webpack-plugin": "4.5.0",
        "http-proxy-middleware": "1.0.6",
        "less": "3.12.2",
        "less-loader": "7.1.0",
        "lint-staged": "10.5.4",
        "mini-css-extract-plugin": "1.3.3",
        "normalize.css": "8.0.1",
        "optimize-css-assets-webpack-plugin": "5.0.4",
        "plop": "2.7.4",
        "postcss": "8.2.1",
        "postcss-loader": "4.1.0",
        "react-hot-loader": "4.13.0",
        "rimraf": "3.0.2",
        "script-ext-html-webpack-plugin": "2.1.5",
        "source-map": "0.7.3",
        "style-loader": "2.0.0",
        "thread-loader": "3.0.1",
        "ts-loader": "8.0.12",
        "typescript": "4.1.2",
        "uglifyjs-webpack-plugin": "2.2.0",
        "webpack": "5.10.0",
        "webpack-bundle-analyzer": "4.2.0",
        "webpack-cli": "4.3.1",
        "webpack-dev-middleware": "4.1.0",
        "webpack-dev-server": "3.11.0",
        "webpack-hot-middleware": "2.25.0",
        "webpack-merge": "5.5.0"
    },
    "devDependencies": {
        "@utils-npm/qg-kit": "1.0.0",
        "chalk": "4.1.1",
        "cross-env": "7.0.3",
        "dotenv": "8.2.0",
        "react": "17.0.1",
        "react-dom": "17.0.1"
    },
    "peerDependencies": {
        "react": ">=17.x.x",
        "react-dom": ">=17.x.x",
        "typescript": ">=4.x.x"
    }
}
